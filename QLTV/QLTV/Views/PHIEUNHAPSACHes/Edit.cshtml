@model QLTV.Models.phieunhap

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Phiếu nhập sách</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.phieunhaps.MANXB, "Mã nhà xuất bản", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("phieunhaps.MANXB", ViewBag.MANXB as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.phieunhaps.MANXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.phieunhaps.NGUOIGS, "Người viết phiếu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.phieunhaps.NGUOIGS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phieunhaps.NGUOIGS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.phieunhaps.NGAYNHAP, "Ngày nhập", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.phieunhaps.NGAYNHAP, new { htmlAttributes = new { id = "ngaynhap", @class = "datepicker" } })
                @Html.ValidationMessageFor(model => model.phieunhaps.NGAYNHAP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-inline">
            <h4>Chi tiết phiếu nhập</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Label("Tên sách")
            <div class="form-group" style="padding-left:3%">
                @Html.DropDownList("MAS", null, htmlAttributes: new { @class = "form-control", @id = "item" })
                @Html.ValidationMessageFor(model => model.ctpn.MAS, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.ctpn.SOLUONGN, "Số lượng nhập", htmlAttributes: new { style = "padding-left:5%" })
            <div class="form-group" style="padding-left:3%">
                @Html.EditorFor(model => model.ctpn.SOLUONGN, new { htmlAttributes = new { @class = "form-control", @id = "amount" } })
                @Html.ValidationMessageFor(model => model.phieunhaps.CTPNS, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="padding-left:3%">
                <input type="button" id="btnAdd" class="btn btn-default" value="Add" />
            </div>
        </div>
        <hr />
        <table class="table" id="chitiet">
            <tr>
                <td>Mã phiếu nhập</td>
                <td>Tên Sách</td>
                <td>Số lượng nhập</td>
                <td></td>
            </tr>
            @if (Model.phieunhaps.CTPNS != null)
            {
                foreach (var ct in Model.phieunhaps.CTPNS)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => ct.MAPNS)</td>
                        <td>@Html.DisplayFor(modelItem => ct.SACH.TENS)</td>
                        <td>@Html.DisplayFor(modelItem => ct.SOLUONGN)</td>
                        <td><button class="btn btn-danger btnDelete">Delete</button></td>
                        @Html.Hidden("ct.Index", ct.MAPNS)
                        @Html.Hidden("ct[" + ct.MAPNS + "].MAS", ct.MAS)
                        @Html.Hidden("ct[" + ct.MAPNS + "].SOLUONGN", ct.SOLUONGN)
                    </tr>
                }
            }            
            else
            {
                <tr>
                    Không có chi tiết
                </tr>
            }                                           
        </table>
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/myjquery")
